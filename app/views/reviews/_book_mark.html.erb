<% if user_signed_in? %>
    <% if BookMark.where(review_id: review.id).where(user_id: current_user.id) == [] %>
        <div style = "float: right">
            <%= link_to create_bookmark_path(review.id), class: "btn btn-primary", remote: true, method: :post do %>
                <i class="far fa-thumbs-up"></i>Bookmark
            <% end %>                 
        </div>
    <% else %>
        <div style = "float: right">
            <%= link_to delete_bookmark_path(review.id), class: "btn btn-primary", remote: true, method: :delete do %>
                <i class="far fa-thumbs-down"></i>Unbookmark
            <% end %> 
        </div>
    <% end %>
<% end %>